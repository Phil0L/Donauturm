<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SeekBarPreference
        android:id="@+id/item_columns"
        android:key="item_columns"
        android:max="5"
        android:summary="Set amount of columns"
        android:title="Columns"
        app:defaultValue="1"
        app:iconSpaceReserved="false"
        app:min="1"
        app:showSeekBarValue="true" />

    <SeekBarPreference
        android:id="@+id/item_row_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:key="item_row_spacing"
        android:max="1000"
        android:summary="Set amount space between rows"
        android:title="Row spacing"
        app:defaultValue="1"
        app:iconSpaceReserved="false"
        app:min="0"
        app:showSeekBarValue="true" />

    <SeekBarPreference
        android:id="@+id/item_column_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:key="item_column_spacing"
        android:max="1000"
        android:summary="Set amount of space between columns"
        android:title="Column spacing"
        app:defaultValue="1"
        app:iconSpaceReserved="false"
        app:min="0"
        app:showSeekBarValue="true" />

</PreferenceScreen>