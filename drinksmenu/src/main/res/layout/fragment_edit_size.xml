<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_unlocked" />

    <ImageView
        android:id="@+id/size_box"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_item_group_border" />

    <ImageView
        android:id="@+id/size_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/size_edit_height"
        app:layout_constraintEnd_toEndOf="@+id/size_edit_height"
        app:layout_constraintStart_toStartOf="@+id/size_edit_height"
        app:layout_constraintTop_toTopOf="@+id/size_box"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_arrow_up" />

    <EditText
        android:id="@+id/size_edit_height"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/vec_edit_text_box"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/size_box"
        app:layout_constraintStart_toStartOf="@+id/size_box"
        app:layout_constraintTop_toTopOf="@+id/size_box"
        tools:text="100" />

    <ImageView
        android:id="@+id/size_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/size_box"
        app:layout_constraintEnd_toEndOf="@+id/size_edit_height"
        app:layout_constraintStart_toStartOf="@+id/size_edit_height"
        app:layout_constraintTop_toBottomOf="@+id/size_edit_height"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_arrow_down" />

    <ImageView
        android:id="@+id/size_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/size_edit_width"
        app:layout_constraintEnd_toStartOf="@+id/size_edit_width"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/size_box"
        app:layout_constraintTop_toTopOf="@+id/size_edit_width"
        app:srcCompat="@drawable/ic_arrow_left" />

    <EditText
        android:id="@+id/size_edit_width"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/vec_edit_text_box"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/size_box"
        app:layout_constraintStart_toStartOf="@+id/size_box"
        app:layout_constraintTop_toTopOf="@+id/size_box"
        tools:text="100" />

    <ImageView
        android:id="@+id/size_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/size_edit_width"
        app:layout_constraintEnd_toEndOf="@+id/size_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/size_edit_width"
        app:layout_constraintTop_toTopOf="@+id/size_edit_width"
        app:srcCompat="@drawable/ic_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>